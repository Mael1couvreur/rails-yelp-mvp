<div class="container">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @restaurant.name%></h2>
      <p class="card-text"><%= @restaurant.address %></p>
      <p><%= @restaurant.category %></p>
    </div>
  </div>
  <button type="button" class="btn btn-info"><%= link_to 'Back to restaurants list', restaurants_path%> </button>
  <button type="button" class="btn btn-info"><%= link_to 'Add restaurant review', new_restaurant_review_path(restaurant_id: @restaurant.id)%> </button>
</div>

<div class="container">
<%  %>
  <% @restaurant.reviews.all do |review|%>
  <div class="card">
    <div class="card-body">
      <p class="card-text"><%= review.content %></p>
      <p><%= review.rating %></p>
    </div>
  </div>
  <% end %>
</div>
